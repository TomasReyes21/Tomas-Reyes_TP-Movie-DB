<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
<body>

    <main class="row d-flex justify-content-center aling-items-center p-3">
        <div class="col-12 col-md-10">

            <div class="card">

                <div class="card-header d-flex justify-content-between">

                    <nav aria-label="breadcrumb">

                        <ol class="breadcrumb">

                            <li class="breadcrumb-item"><a href="/movies">Peliculas</a></li>
                            <li class="breadcrumb-item active" aria-corrent="page">Peliculas: <%= title %></a></li>

                        </ol>

                    </nav>

                </div>

                <div class="card-body">

                    <div class="row">
                        <div class="col-12 col-md-4">
                            <img src="/img/<%= image %>" class="img-fluid" alt="">
                        </div>
                        <div class="col-12 col-md-8">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item fs-3"><b><%= title.toUpperCase() %></b></li>
                                <li class="list-group-item"><b>Duraci√≥n: </b><%= length %> min.</li>
                                <li class="list-group-item"><b>Estreno: </b><%= moment(release_date).format('DD/MM/YYYY') %></li>
                                <li class="list-group-item"><b>Premios: </b><%= awards %></li>
                                <li class="list-group-item"><b>Rating: </b><%= rating %></li>
                                
                              </ul>
                                <h5 class="mt-3">ACTORES</h5>
                                <hr>
                              <ul class="list-group list-group-flush">
                                <% actors.forEach(actor => { %>
                                    <li class="list-group-item"><%= actor.first_name %><b>  <%= actor.last_name %></b></li>
                                <% }) %>
                                
                              </ul>

                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-content-end gap-1">
                                <a href="/movies/edit/<%= id %>">Editar</a>
                                <a class="text-danger" href="/movies/delete/<%= id %>">Borrar</a>
                            </div>    
                    </div>

                </div>


            </div>


        </div>


    </main>
    
    
<%- include('partials/scripts') %>
</body>
</html>